{% extends 'CoreCoreBundle::base.html.twig' %}


{% block body %}
        <h1>{{ user }}, here are your characters !</h1>

        <table class="records_list">
            <thead>

            </thead>
            <tbody>
            {% for char in chars %}
                <tr>
                    <td><a href="{{ path('chars_show', { 'id': char.id }) }}">{{ char.id }}</a></td>
                    <td>{{ char.name }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('select_char', { 'id': char.id }) }}">Select this character</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('chars_new') }}">
                    Create a new character !
                </a>
            </li>
        </ul>

{% endblock %}
