{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Position</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Map</th>
                <td>{{ entity.map }}</td>
            </tr>
            <tr>
                <th>X</th>
                <td>{{ entity.x }}</td>
            </tr>
            <tr>
                <th>Y</th>
                <td>{{ entity.y }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('position') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('position_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
